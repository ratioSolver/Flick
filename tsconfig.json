{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2015",
    "declaration": true,
    "incremental": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "noImplicitOverride": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
  },
  "include": [
    "src/**/*"
  ]
}